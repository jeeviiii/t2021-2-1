#include <stdio.h>
 
int main()
{
	char Operator;
	double a,b, result = 0;
	
	printf("\n  Enter an Operator (+, -, *, /)  :  ");
  	scanf("%c", &Operator);
  	
	printf("\n Enter the Values for two Operands: a and b  :  ");
  	scanf("%lf%lf", &a, &b);
  	
  	switch(Operator)
  	{
  		case '+':
  			printf("\n The result of %.2lf + %.2lf = %.2lf", a, b, a + b);
  			break;
  		case '-':
  			printf("\n The result of %.2lf - %.2lf = %.2lf", a, b, a - b);
  			break;  			
  		case '*':
  			printf("\n The result of %.2lf * %.2lf = %.2lf", a, b, a * b);
  			break;
  		case '/':
  			printf("\n The result of %.2lf / %.2lf  = %.2lf", a, b, a / b);
  			break;
		default:
			printf("\n You have enetered an Invalid Operator ");				    			
	}
	
  	return 0;
}
