#include <stdio.h>

int main() 
{
    int i, n,j;
   scanf("%d",&n);
   for(i=1;i<=n;i++)
   {
       if(i%2==0)
        {
            for(j=i;j>0;j--)
            {
                printf("%d ",j);
              
            }
            printf("\n");
        }
        else
        {
            for(j=1;j<=i;j++)
            {
                printf("%d ",j);
               
            }
            printf("\n");
        }
    
        
   }
   for(i=n-1;i>0;i--)
   {
       if(i%2==0)
        {
            for(j=i;j>0;j--)
            {
                printf("%d ",j);
                
            }
            printf("\n");
        }
        else
        {
            for(j=1;j<=i;j++)
            {
                printf("%d ",j);
                
            }
            printf("\n");
        }
    
        
   }
    return 0;
}
